{
  "name": "ugbz-game-hub",
  "version": "1.0.0",
  "description": "UGBZ - Multiplayer Game Hub with Real-time Synchronization",
  "main": "src/server/index.ts",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon --exec ts-node src/server/index.ts",
    "dev:client": "cd src/client && npm start",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc",
    "build:client": "cd src/client && npm run build",
    "start": "node dist/server/index.js",
    "test": "jest"
  },
  "keywords": ["game", "multiplayer", "realtime", "socket.io"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.6.0",
    "@supabase/supabase-js": "^2.38.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.0",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/node": "^20.3.1",
    "@types/express": "^4.17.17",
    "typescript": "^5.1.3",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  }
}
